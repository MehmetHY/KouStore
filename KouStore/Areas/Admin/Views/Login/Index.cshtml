@model KouStore.Models.ViewModels.AdminLoginViewModel;
@{
    ViewData["Title"] = "Admin Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <main>
        <form method="post" asp-action="Verify">
            <h1>Admin Login</h1>
            <div>
                <label asp-for="Admin.UId"></label>
                <input asp-for="Admin.UId"/>
                @if (!Model.AdminLogin.NameValid)
                {
                    <p>@Model.AdminLogin.NameErrorMessage</p>
                }
            </div>
            <div>
                <label asp-for="Admin.Password"></label>
                <input asp-for="Admin.Password" />
                @if (!Model.AdminLogin.PasswordValid)
                {
                    <p>@Model.AdminLogin.PasswordErrorMessage</p>
                }
            </div>
            <input type="submit" value="Login" />
        </form>
    </main>
</body>
</html>