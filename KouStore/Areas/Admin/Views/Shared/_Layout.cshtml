<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
        <a asp-action="Index" asp-controller="Dashboard" asp-area="Admin">Dashboard</a>
        <a asp-action="Index" asp-controller="Home" asp-area="Customer">Store</a>
        @if (@Context.Session.IsAdminSignedIn())
        {
            <a asp-action="Logout" asp-controller="SignIn" asp-area="Admin">Logout</a>
        }
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer>Footer</footer>
</body>
</html>
