@using KouStore.Areas.Admin.Models
@model KouStore.Models.FormModel<CategoryViewModel>


<div class="createcategory">
    <div class="form">
        <h1>Create Category</h1>
        <form method="post" asp-action="Create">
            <div class="inputs">
                <div class="label-input">
                    <label asp-for="ViewModel.Category.Name"></label>
                    <input asp-for="ViewModel.Category.Name" />
@if (!@Model!.ViewModel.NameValid)
{
                    <span class="input-error">@Model.ViewModel.NameError</span>
}
                </div>
            </div>
            <div class="button-container">
                <input class="button" type="submit" value="Create" />
                <a asp-action="Index" class="button button-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>