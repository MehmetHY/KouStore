@model KouStore.Areas.Customer.Models.HomePageViewModel
@{
    ViewData["Title"] = "Home";
}
<h1>Home</h1>
@foreach (var category in @Model!.Categories)
{
    <a asp-area="Customer" asp-controller="Category" asp-action="Index" asp-route-categoryName="@category.Name">@category.Name</a>
    <br />
}
<br />
@foreach (var product in @Model.QueryModels)
{
    <a asp-area="Customer" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Title</a>
    <br />
}

@if (@Model.CurrentPage > 1)
{
    <a asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
}
<a>@Model.CurrentPage</a>
@if (@Model.CurrentPage < @Model.TotalPageCount)
{
    <a asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
}