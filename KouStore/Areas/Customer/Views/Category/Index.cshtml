@model KouStore.Areas.Customer.Models.CategoryPageViewModel
@{
    ViewData["Title"] = @Model!.Category!.Name;
}
<h1>@Model.Category.Name</h1>

@foreach (var product in @Model.QueryModels)
{
    <a asp-area="Customer" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Title</a>
    <br />
}

@if (@Model.CurrentPage > 1)
{
    <a asp-action="Index" asp-route-categoryName="@Model.Category.Name" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
}
<a>@Model.CurrentPage</a>
@if (@Model.CurrentPage < @Model.TotalPageCount)
{
    <a asp-action="Index" asp-route-categoryName="@Model.Category.Name" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
}