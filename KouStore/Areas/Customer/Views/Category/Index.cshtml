@model KouStore.Areas.Customer.Models.CategoryPageViewModel
@{
    ViewData["Title"] = @Model!.Category!.Name;
}


<div class="categoryproducts">
    <div class="panel">
        <h1>@Model.Category.Name</h1>
        <div class="product-container">

            @foreach (var product in @Model.QueryModels)
{
            <a asp-area="Customer" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id" class="product">
                <img class="header-img" src="@product.GetImageDataURL()" alt="img">
                <div class="product-info">
                    <div class="title-price">
                        <h3 class="title">@product.Title</h3>
                        <h3 class="price">@product.Price</h3>
                    </div>
                    <div class="description">
                        <p>@product.Price</p>
                    </div>
                </div>
            </a>
}
        </div>

        <div class="page-numbers">
@if (@Model.CurrentPage > 1)
{
            <a class="button button-success" asp-action="Index" asp-route-categoryName="@Model.Category.Name" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>              
}
            <a class="current-page-number button button-success">@Model.CurrentPage</a>
@if (@Model.CurrentPage < @Model.TotalPageCount)
{
            <a class="button button-success" asp-action="Index" asp-route-categoryName="@Model.Category.Name" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
}
        </div>
    
    </div>
</div>