@model FormModel<SignInViewModel>
@{
    ViewData["Title"] = "Sign in";
}


<div class="signin">
    <div class="form">
        <h1>Sign in</h1>
        <form asp-action="ValidateSignIn" asp-route-tController="@ViewBag.LastController" asp-route-tAction="@ViewBag.LastAction" asp-route-tId="@ViewBag.LastId">
            <div class="inputs">
                <div class="label-input">
                    <label asp-for="ViewModel.Customer.Name"></label>
                    <input asp-for="ViewModel.Customer.Name" />
                    @if (!@Model!.ViewModel.NameValid)
                    {
                        <span class="input-error">@Model.ViewModel.NameError</span>
                    }
                </div>
                <div class="label-input">
                    <label asp-for="ViewModel.Customer.Password"></label>
                    <input asp-for="ViewModel.Customer.Password" />
                    @if (!@Model!.ViewModel.PasswordValid)
                    {
                        <span  class="input-error">@Model.ViewModel.PasswordError</span>
                    }
                </div>
            </div>
            <div class="button-container">
                <input class="button" type="submit" value="Sign in" />
                <h3 class="or">or</h3>
                <a class="button button-neutral" asp-action="Register">Register</a>
            </div>
        </form>
    </div>
</div>