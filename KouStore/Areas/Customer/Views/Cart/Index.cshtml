@model CartViewModel
@{ViewData["Title"] = "Cart";}

<h1>Cart</h1>

@foreach (var product in @Model!.Products)
{
    <span>@product.Title</span>
    <span>@product.Price</span>
    <a asp-action="Remove" asp-route-id="@product.Id">Remove</a>
    <br />
}

@if (@Model.TotalPrice == decimal.Zero)
{
    <p>Cart is empty.</p>
}
else
{
<h3>Total price: @Model.TotalPrice</h3>
    <form method="post" asp-action="Checkout">
        <input type="hidden" asp-for="Customer!.Id" value="@Model.Customer!.Id"/>
        <input type="hidden" asp-for="Customer!.Name" value="@Model.Customer!.Name"/>
        <input type="hidden" asp-for="Payment" value="@Model.Payment"/>
        <input type="submit" value="Checkout"/>
    </form>
}
