@model KouStore.Areas.Customer.Models.SearchPageViewModel
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<p>@Model!.Message</p>

@foreach (var product in @Model.QueryModels)
{
    <a asp-area="Customer" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Title</a>
    <br />
}


@if (@Model.CurrentPage > 1)
{
    <a asp-action="Index" asp-route-search="@Model.SearchString" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
}
<a>@Model.CurrentPage</a>
@if (@Model.CurrentPage < @Model.TotalPageCount)
{
    <a asp-action="Index" asp-route-search="@Model.SearchString" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
}