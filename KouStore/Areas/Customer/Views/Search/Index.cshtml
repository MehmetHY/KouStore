@model KouStore.Areas.Customer.Models.SearchPageViewModel
@{
    ViewData["Title"] = "Search";
}

<div class="searchproducts">
    <div class="panel">
        <h1>Search</h1>
        <p>@Model!.Message</p>
        <div class="product-container">
@foreach (var product in @Model.QueryModels)
{
                <a asp-area="Customer" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id" class="product">
                <img class="header-img" src="@product.GetImageDataURL()" alt="image01">
                <div class="product-info">
                    <div class="title-price">
                        <h3 class="title">@product.Title</h3>
                        <h3 class="price">@product.Price $</h3>
                    </div>
                    <div class="description">
                        <p>@product.Description</p>
                    </div>
                </div>
            </a>
}

        </div>
        <div class="page-numbers">
@if (@Model.CurrentPage > 1)
{
                <a class="button button-success" asp-action="Index" asp-route-search="@Model.SearchString" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a> 
}
            <a class="current-page-number button button-success">@Model.CurrentPage</a>
@if (@Model.CurrentPage < @Model.TotalPageCount)
{
            <a class="button button-success" asp-action="Index" asp-route-search="@Model.SearchString" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
}
        </div>
    
    </div>
</div>