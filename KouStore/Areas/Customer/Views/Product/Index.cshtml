@model ProductPageViewModel
@{
    ViewData["Title"] = @Model!.Product.Title;
}
<h1>@Model.Product.Title</h1>
@if (@Model.IsInCard)
{
    <a asp-action="Index" asp-controller="Cart" asp-route-id="@Model.Customer!.Id">Go to Cart</a>
}
else
{
    <a asp-action="AddToCart" asp-route-id="@Model.Product.Id">Add to Cart</a>
}
