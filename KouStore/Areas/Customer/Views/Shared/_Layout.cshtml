<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href=~/style/shared/common.css/>
    <link rel="stylesheet" href=~/style/customer/home.css/>
    <link rel="stylesheet" href=~/style/customer/categoryproducts.css/>
    <link rel="stylesheet" href=~/style/customer/searchproducts.css/>
    <link rel="stylesheet" href=~/style/customer/signin.css/>
    <link rel="stylesheet" href=~/style/customer/register.css/>
    <link rel="stylesheet" href=~/style/customer/productpage.css/>
    <link rel="stylesheet" href=~/style/customer/cartpage.css/>
    <link rel="stylesheet" href=~/style/customer/checkoutpage.css/>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
<div class="header-start">
    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="logo">
    </a>
</div>
<div class="header-mid">
    <form class="search" method="get" asp-area="Customer" asp-controller="Search" asp-action="Index">
        <input name="search" class="search-text" type="text">
        <input class="header-button button" type="submit" value="Search">
    </form>
</div>
<div class="header-end">
@{
    var customerId = @Context.Session.GetCurrentCustomerId();
}
@if (@customerId != 0)
{
    <a class="header-button" asp-action="Index" asp-controller="Cart" asp-route-id="@customerId">Cart</a>
    <a class="header-button" asp-action="Logout" asp-controller="SignIn" asp-area="Customer">Log out</a>
}
else
{
    <a class="header-button" asp-action="Index" asp-controller="SignIn" asp-area="Customer">Sign in</a>
}
</div>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer>Footer</footer>
</body>
</html>
